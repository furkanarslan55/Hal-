@* _Layout.cshtml - Razor layout örneği
   Açıklama: Bu dosya bir ASP.NET MVC / Razor Pages projesi için temel layout'tur.
   İçinde RenderBody() ve opsiyonel RenderSection(Styles, Scripts) bölümleri vardır.
*@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MySite</title>

    <!-- Örnek: Bootstrap CDN (isteğe bağlı) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="" crossorigin="anonymous" />

    @* Sayfa özel stilleri için opsiyonel bölüm *@
    @RenderSection("Styles", required: false)

    <style>
        /* Küçük, okunaklı yerel stiller (örnek) */
        body {
            padding-top: 70px;
        }

        .site-footer {
            background: #f8f9fa;
            padding: 1rem 0;
        }

        .brand {
            font-weight: 700;
            letter-spacing: .3px;
        }
    </style>
</head>
<body>
    <!-- Başlık / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
            <div class="container">
                <a class="navbar-brand brand" href="@Url.Content("~/")">MySite</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="#">Ana Sayfa</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Hakkında</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">İletişim</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Ana içerik alanı -->
    <main class="container my-4">
        @* Opsiyonel başlık bölümü: her view kendi başlığını buraya ekleyebilir *@
        @RenderSection("PageHeader", required: false)

        @* RenderBody: burada view'lerin içeriği yer alır *@
        @RenderBody()
    </main>

    <!-- Yan içerik / widget alanı örneği (isteğe bağlı) -->
    @* Eğer sayfanızda ortak bir sidebar kullanmak isterseniz, buraya partial koyabilirsiniz *@
    @* @Html.Partial("_Sidebar") *@

    <!-- Altbilgi -->
    <footer class="site-footer mt-auto">
        <div class="container text-center">
            <small>&copy; @DateTime.Now.Year MySite. Tüm hakları saklıdır.</small>
        </div>
    </footer>

    <!-- Scriptler: Bootstrap + opsiyonel RenderSection -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
