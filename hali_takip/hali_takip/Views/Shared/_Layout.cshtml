@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - qualite</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>

<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- BACKGROUND IMAGE -->
    <div class="background-image-container">
        <img src="@Url.Content("~/images/background.jpg")" alt="Sayfa Arka Plan Resmi" />
    </div>

    <!-- HEADER -->
    <header class="shadow-sm sticky-top"
            style="background-image: url('@Url.Content("~/images/halıkedi.jpg")');
                   background-size: cover;
                   background-position: center;
                   background-repeat: no-repeat;">
        <div class="container py-4 text-center">
            <div class="header-logo">Qualite</div>
        </div>

        <!-- RESPONSIVE NAVBAR -->
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand d-md-none" href="#">Qualite</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Anasayfa")">Markalar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "BizKimiz")">Biz Kimiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "SosyalMedya")">Sosyal Medya</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Iletisim")">İletişim</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-grow-1">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="border-top mt-auto footer-blur">
        <div class="container py-4 d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div><a href="#" class="fw-semibold text-decoration-none text-white">Markalarımız</a></div>
            <div><a href="#" class="fw-semibold text-decoration-none text-white">Koleksiyonlarımız</a></div>
            <div><a href="#" class="fw-semibold text-decoration-none text-white">Ürünlerimiz</a></div>
        </div>
        <div class="text-center small text-white pb-3">
            © @DateTime.Now.Year qualite. Tüm hakları saklıdır.
        </div>
    </footer>

    <!-- WHATSAPP BUTTON -->
    <a href="https://wa.me/905350123021"
       target="_blank"
       class="whatsapp-float"
       title="WhatsApp ile iletişime geç">
        <img src="~/images/WhatsApp.svg" alt="WhatsApp" />
    </a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
