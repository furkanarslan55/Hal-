@{
    // Bu sayfanın adını belirler, Layout dosyasındaki @ViewBag.Title'ı doldurur
    ViewBag.Title = "İletişim";
    // Layout dosyasının kullanılacağını varsayar
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Google Haritalar için modern stil */
    .map-container {
        height: 500px; /* Haritanın dikey boyutunu ayarlar */
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1); /* Hafif gölge efekti */
        border-radius: 8px; /* Köşe yuvarlaklığı */
        overflow: hidden; /* Haritanın bu konteyner içinde kalmasını sağlar */
    }

    /* İletişim bilgi kutuları için stil */
    .contact-info-box {
        border-left: 5px solid #007bff; /* Sol tarafta modern mavi çizgi */
        padding: 15px;
        margin-bottom: 20px;
        background-color: #f8f9fa; /* Açık arka plan */
        border-radius: 4px;
    }
</style>

<div class="container py-5">

    <h1 class="text-center mb-5" style="font-family: 'Lucida Sans', sans-serif; font-size: 3rem; font-weight: 300; letter-spacing: 0.1em; text-transform: uppercase; color: #333;">
        Bize Ulaşın
    </h1>

    <div class="row">
        <div class="col-lg-5 mb-4">

            <div class="contact-info-box">
                <h5 class="fw-bold text-primary">Adresimiz</h5>
                <p class="mb-0">
                    : Muhittin, Salih Omurtak Cd. 73 a <br>
                     Çorlu/Tekirdağ
                </p>
            </div>

            <div class="contact-info-box">
                <h5 class="fw-bold text-primary">Telefon ve E-posta</h5>
                <p class="mb-0">
                    <i class="fas fa-phone-alt me-2"></i> +90 555 123 45 67<br>
                    <i class="fas fa-envelope me-2"></i> info@qualite.com
                </p>
            </div>

            <h4 class="mt-4 mb-3">Biz Size Ulaşalım</h4>
            <form>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Adınız Soyadınız" required>
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" placeholder="E-posta Adresiniz" required>
                </div>
                <div class="mb-3">
                    <textarea class="form-control" rows="4" placeholder="Mesajınız" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2">Gönder</button>
            </form>
        </div>

        <div class="col-lg-7">
            <div class="map-container">
                <iframe  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3004.0577807314867!2d27.813857976534344!3d41.15509051037105!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14b4e6d8f811a8af%3A0xede8d17621a20b44!2sMuhittin%2C%20Salih%20Omurtak%20Cd.%2073%20a%2C%2059850%20%C3%87orlu%2FTekirda%C4%9F%2C%20T%C3%BCrkiye!5e0!3m2!1str!2sjp!4v1762935499787!5m2!1str!2sjp"
                        width="100%"
                        height="100%"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </>
            </div>
        </div>
    </div>
</div>